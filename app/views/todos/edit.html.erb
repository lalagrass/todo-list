<%= form_for @todo do |f| %>
  <%= f.label :datetime_create, "Date" %>
  <%= f.text_field :datetime_create, :value => (@todo.datetime_create.localtime) %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :priority, "Priority" %>
  <%= f.number_field :priority %>

  <%= f.submit "Update la" %>
<% end %>